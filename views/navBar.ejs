<div class="ink-shade fade">
    <div id="loginModal" class="ink-modal fade" data-trigger=".login" data-width="80%" data-height="80%" role="dialog" aria-hidden="true" aria-labelled-by="login-title">
      <div class="modal-header">
          <button class="modal-close ink-dismiss"></button>
          <h2 id="login-title">Log In</h2>
      </div>
      <div class="modal-body" id="loginContent">
        <form id="loginForm" class="ink-form ink-formvalidator" method="post" action="/login">
          <div class="control-group required">
              <label for="e-mail">Email</label>
              <div class="control">
                  <input type="email" name="email" id="email" data-rules="required|email" />
              </div>
          </div>
          <div class="control-group required">
              <label for="pass">Password</label>
              <div class="control">
                  <input type="password" name="password" id="password" data-rules="required" />
              </div>
          </div>
          <input type="submit" name="sub" value="Submit" id="loginSub" class="ink-button success" />
        </form>
      </div>
    </div>
</div>
<div class="ink-shade fade">
    <div id="signupModal" class="ink-modal fade" data-trigger=".signup" data-width="80%" data-height="80%" role="dialog" aria-hidden="true" aria-labelled-by="signup-title">
      <div class="modal-header">
          <button class="modal-close ink-dismiss"></button>
          <h2 id="login-title">Sign Up</h2>
      </div>
      <div class="modal-body" id="signupContent">
        <form id="signupForm" class="ink-form ink-formvalidator" method="post" action="#">
          <div class="column-group gutters">
              <div class="control-group required all-50">
                  <label for="fname">First Name</label>
                  <div class="control">
                      <input type="text" name="first name" id="fname" data-rules="required|alpha_dash" />
                  </div>
              </div>
              <div class="control-group required all-50">
                  <label for="lname">Last Name</label>
                  <div class="control">
                      <input type="text" name="last name" id="lname" data-rules="required|alpha_dash" />
                  </div>
              </div>
          </div>
          <div class="control-group required">
              <label for="e-mail">Email</label>
              <div class="control">
                  <input type="text" name="e-mail" id="e-mail" data-rules="required|email" />
              </div>
          </div>
          <div class="control-group">
              <label for="phone">Phone</label>
              <div class="control">
                  <input type="text" name="phone number" id="phone" data-rules="min_length[10]|max_length[11]" />
              </div>
          </div>
          <div class="control-group required">
              <label for="pass">Password </label>
              <div class="control">
                  <input type="password" name="password" id="pass" data-rules="required|min_length[8]" />
              </div>
          </div>
          <div class="control-group required">
              <label for="confpass">Confirm Password:</label>
              <div class="control">
                  <input type="password" name="password confirmation" id="confpass" data-rules="required|matches[password]" data-label="password confirmation" />
              </div>
          </div>
          <input type="submit" name="sub" value="Submit" class="ink-button success" />
        </form>
      </div>
    </div>
</div>
