
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
    <title>UF ACM | UFPT</title>
    <link rel="icon " type = "image/x-icon" href="img/icon.png"/>
    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="../css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <link href="../css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:100,100italic' rel='stylesheet' type='text/css'>
    <!-- Script for nav -->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="../js/bin/materialize.js"></script>
    <script>

      $(document).ready(function(){
        $('.parallax').parallax();
        $('select').material_select();
        $(".button-collapse").sideNav();
        $(".dropdown-button").dropdown();


        document.getElementById("buts").onclick = function() {
            document.getElementById("sub").submit();
        }


        $("#tags").on('input', function () {
            var val = this.value;
            if($('#names option').filter(function(){
                return this.value === val;        
            }).length) {
                $('#results').append('<div class="chip">'+this.value+'</div>');
                $.post( "/updateTags", this.value);
            }
        });

      });

    </script>

<style type="text/css">


object{
    width: 70vw;
    height: 70vh;
    margin-bottom: 3vh;
}

.container{
    margin-bottom: 3vh;
}




</style>


    </head>

    <!-- navbar include directive  -->
    <% include ../navBar %>

  <body>
      <div style="height:30%;  background-image: url('../img/ufpt.jpg'); position:relative; top:-75px; z-index:-1;">
      <h1 class="header white-text">Your Resume</h1>
    </div>
    <main>
        <form action="/updateProfile" method="post" id="sub">
    <div class="container">
        <textarea id="question1" class="materialize-textarea" name="question1"><%= user.local.question1 %></textarea>
        <label for="question1">Where do you see yourself in 10 years?</label>

        <textarea id="question2" class="materialize-textarea" name="question2"><%= user.local.question2 %></textarea>
        <label for="question2">Where do you see yourself in 10 years?</label>

        <textarea id="question3" class="materialize-textarea" name="question3"><%= user.local.question3 %></textarea>
        <label for="question3">Where do you see yourself in 10 years?</label>
        <br><br>
<a class="waves-effect waves-light btn teal lighten-1" type="submit" id="buts">Submit Form</a>
    </div>
    </form>

    <div class="container">


            <input id="tags" type="text" class="validate" list="names">
    <label for="tags">What Are You Good At?</label>
    <datalist id="names">
        <option value="JavaScript" />
        <option value="Java" />
        <option value="HTML" />
        <option value="CSS" />
        <option value="C++" />
        <option value="iOS" />
        <option value="Android" />
    </datalist>

    <div id="results">
         <% user.local.tags.forEach(function(tag) { %>
            <div class="chip"><%= tag %></div>
         <% }); %>
    </div>

<% if (user.local.resumeLink !== undefined) { %>
<object data="/file"></object>
<% } %>

     <form action="upload" method="post" enctype="multipart/form-data">
     <input type="file" name="pdfs">
     <input type="submit" value="Submit Resume">
    </form>





    </div>

    </main>

    <!--  Scripts-->
    <script src="../js/bin/materialize.js"></script>
  </body>
</html>
