      <div style="height:30%;  background-image: url('../img/ufpt.jpg'); position:relative; top:-75px; z-index:-1;">
         <h1 class="header white-text">Resume Repo for sponsors</h1>
      </div>
      <main>
         <div class="container">
            <div class="input-field">

              <form>
               
               <input name="group1" type="radio" id="Java" />
               <label for="Java">Java</label>

               <input type="radio" name="group1" id="Android" />
               <label for="Android">Android</label>

               <input type="radio" name="group1" id="iOS" />
               <label for="iOS">iOS</label>

               <input type="radio"  name="group1" id="Python" />
               <label for="Python">Python</label>

               <input type="radio"  name="group1" id="C++" />
               <label for="C++">C++</label>

               <input type="radio"  name="group1" id="PHP" />
               <label for="PHP">PHP</label>

               <input type="radio"  name="group1" id="JavaScript" />
               <label for="JavaScript">JavaScript</label>

             </form>


            </div>
            <ul class="collection with-header">
               <li class="collection-header">
                  <h4>Search Results</h4>
               </li>
               <!-- <li class="collection-item"><div>Alvin<a href="#!" class="secondary-content"><i class="material-icons">send</i></a></div></li> -->
            </ul>
         </div>
      <a class="waves-effect waves-light btn" id="zips">Download Zips</a>
      <iframe src="" id="down">

</iframe>


      </main>
      <script type="text/javascript">
         var pdfs = []


         $("form input:radio").each(function(index){
            $("input[name='group1']").change(function(){
                $.post( "/getStudentResumes", this.id, function(data){
                    $( ".clicks" ).remove();
                       for(var i=0; i<data.length; i++){
                       $(".with-header").append('<li class="collection-item clicks"><div>'+data[i].local.firstName+'<a href="/clicks/'+data[i].local.resumeLink+'" class="secondary-content"><i class="material-icons">send</i></a></div></li>');
                       pdfs.push(data[i].local.resumeLink);
                   }
                   });
            });
         });

           $("#search").keyup(function (e) {
               if (e.keyCode == 13) {

               }

           });



        $("#zips").click(function(){
         $.post( "/testpdf", {"pdfs": pdfs}, function(data){
            $("#down").attr("src", "/downloadPDF");
         });
       });




      </script>
      <!--  Scripts-->
      <script src="../js/bin/materialize.js"></script>
   </body>
