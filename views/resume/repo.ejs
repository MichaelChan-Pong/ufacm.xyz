   <body>
      <div style="height:30%;  background-image: url('../img/ufpt.jpg'); position:relative; top:-75px; z-index:-1;">
         <h1 class="header white-text">Resume Repo for sponsors</h1>
      </div>
      <main>
         <div class="container">
  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">search</i>
          <input type="text" id="search" class="search" autocomplete="off" list="languages">
          <label for="search">Search</label>
        </div>
      </div>
    </div>
  </div>


  <datalist id="languages">
    <option value="JavaScript">
    <option value="PHP">
    <option value="Go">
    <option value="Docker">
    <option value="NodeJs">
    <option value="Deis">
    <option value="AWS">
    <option value="Cloud Computing">
    <option value="Competitive Programming">
    <option value="AngularJs">
    <option value="ReactJs">
    <option value="MeteorJs">
    <option value="Java">
    <option value="HTML">
    <option value="CSS">
    <option value="C#">
    <option value="SQL">
    <option value="MongoDB">
    <option value="C++">
    <option value="iOS">
    <option value="Android">
    <option value="WebDev">
  </datalist>

            <ul class="collection with-header">
               <!-- <li class="collection-header">
                  <h4>Search Results</h4>
               </li> -->
              
            </ul>
         </div>
      <a class="waves-effect waves-light btn" id="zips">Download Zips</a>
      <iframe src="" id="down">

</iframe>


      </main>
      <script type="text/javascript">
         var pdfs = []

           $("#search").keyup(function (e) {
               if (e.keyCode == 13) {
                   $.post( "/getStudentResumes", $("#search").val(), function(data){
                    $( ".clicks" ).remove();

                    if(data.length==0){
                      $(".with-header").append('<li class="collection-item clicks">No Resumes Found</li>');
                    }
                       for(var i=0; i<data.length; i++){
                       $(".with-header").append('<li class="collection-item clicks"><div>'+data[i].local.firstName+'<a href="/clicks/'+data[i].local.resumeLink+'" class="secondary-content"><i class="material-icons">send</i></a></div></li>');
                       pdfs.push(data[i].local.resumeLink);
                   }
                   });
               }

           });



        $("#zips").click(function(){
         $.post( "/testpdf", {"pdfs": pdfs}, function(data){
            $("#down").attr("src", "/downloadPDF");
         });
       });




      </script>



   </body>
</html>
